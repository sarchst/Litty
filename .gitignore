# Temporary files generated by your text editor or operating system
# belong in git's global ignore instead:
# `$XDG_CONFIG_HOME/git/ignore` or `~/.config/git/ignore`

# Ignore bundler config
/.bundle

# Ignore all environment files
/.env*

# Ignore logfiles and tempfiles but keep .keep files
/log/*
!/log/.keep

/tmp/*
!/tmp/.keep

# Ignore pidfiles but keep the directory
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage but keep .keep files
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

/public/assets

# Ignore master key for decrypting credentials and more
/config/master.key

# Ignore system/IDE files
.DS_Store
.byebug_history

# Ignore compiled files
*.rbc

# Ignore CSV, logs, and text files
*.csv
*.log
*.txt

# Ignore editor swap files
*.swp
*.swo

# Ignore node_modules (if using JS bundling)
node_modules/

# Ignore vendor directory fully
/vendor/

# Ignore docker artifacts
docker-compose.override.yml
*.pid

# Ignore coverage reports (if using SimpleCov)
/coverage/

# Ignore unused or optional directories
.kamal/
.github/
.env